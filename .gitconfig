[user]
  name = Nicolas De Loof
  email = nicolas.deloof@gmail.com

[alias]
        st = status
        ci = commit
        co = checkout

[mergetool "p4merge"]
  cmd = /Applications/p4merge.app/Contents/MacOS/p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
  keepTemporaries = false
  trustExitCode = false
  keepBackup = false

[push]
        default = simple
[core]
        excludesfile = ~/.gitignore
